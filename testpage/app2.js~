var http = require('http');
var fnOutput = function (req, res) {
 res.writeHead(200, {'Content-Type': 'text/html'});
 res.write('<!doctype html>\n<html lang="en">\n' +
  '<head>\n<meta charset="utf-8">\n<title>Test web page on node.js</title>\n' +
  '<style type="text/css">* {font-family:arial, sans-serif;}</style>\n' +
  '</head>\n<body>\n<h1>Hello there</h1>\n<p>What a nice looking website</p>\n</body>\n</html>');
 res.end();
}
http.createServer(fnOutput(req, res)).listen(8888, '127.0.0.1');
console.log('Server running at http://127.0.0.1:8888');
